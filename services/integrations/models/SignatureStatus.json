{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "Signature Status schema",
    "$id": "SignatureStatus",
    "type": "object",
    "properties": {
        "name": {
            "description": "The name of the status",
            "type": ["string"]
        },
        "priority": {
            "description": "The priority of the status",
            "type": ["number"]
        },
        "stepNumber": {
            "description": "The step number of the status",
            "type": ["number"]
        },
        "isProcessing": {
            "description": "Indicates if the signature is processing.",
            "type": ["boolean"]
        }
    },
    "required": ["name", "priority", "stepNumber", "isProcessing"]
}
