{
    "name": "asure.hr.services",
    "version": "2.3.1",
    "description": "Collection of HR-related services for Asure Software Evolution HCM suite",
    "main": "index.js",
    "scripts": {
        "test": "node_modules/.bin/jest --coverage --runInBand",
        "lint": "npx eslint . --ext .ts",
        "prettier": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
        "test:base": "node_modules/.bin/jest -c jest.integration.test.config.json -i --verbose --detectOpenHandles",
        "test:local": "INTEGRATION_TEST_CONFIG_FILENAME=local.config.json npm run test:base",
        "test:dev": "INTEGRATION_TEST_CONFIG_FILENAME=development.config.json npm run test:base"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run lint && npm run test"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx,json,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@bitbucket.org/iSystemsTeam/asure.hr.services.git"
    },
    "author": "drexler",
    "license": "ISC",
    "homepage": "https://bitbucket.org/iSystemsTeam/asure.hr.services#readme",
    "devDependencies": {
        "@types/aws-lambda": "^8.10.19",
        "@types/jest": "^24.0.0",
        "@types/mssql": "4.0.12",
        "@types/node": "^11.9.0",
        "@types/randomstring": "^1.1.6",
        "@types/request-promise-native": "^1.0.15",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "ajv": "^5.1.6",
        "auto-changelog": "^1.11.0",
        "eslint": "^7.25.0",
        "husky": "^1.1.3",
        "jest": "^24.1.0",
        "lint-staged": "^8.0.4",
        "mime-types": "^2.1.24",
        "prettier": "^1.19.1",
        "randomstring": "^1.1.5",
        "reflect-metadata": "^0.1.13",
        "serverless": "1.58.0",
        "superagent": "~3.5.2",
        "supertest": "~3.0.0",
        "ts-jest": "^24.1.0",
        "typescript": "^3.9.9"
    },
    "jest": {
        "transform": {
            ".(ts)": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 50,
                "functions": 42,
                "lines": 55,
                "statements": 54
            }
        },
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/",
            "/unit-tests/",
            "/queries/"
        ],
        "collectCoverage": true,
        "coverageReporters": [
            "html",
            "json"
        ],
        "collectCoverageFrom": [
            "./services/**/*.ts",
            "!./services/**/handler.ts",
            "!./services/**/mock.*"
        ]
    },
    "dependencies": {
        "@asuresoftware/asure.auth": "^1.0.0",
        "@pdf-lib/fontkit": "^1.1.0",
        "@smallwins/validate": "^4.3.0",
        "@types/hashids": "^1.0.30",
        "aws-sdk": "^2.307.0",
        "class-transformer": "^0.2.3",
        "hashids": "^1.2.2",
        "jsonwebtoken": "^8.4.0",
        "moment-timezone": "^0.5.32",
        "mssql": "4.3.1",
        "njwt": "^0.4.0",
        "pdf-lib": "^1.12.0",
        "request-promise-native": "^1.0.5",
        "strip-bom": "^3.0.0",
        "url-loader": "^4.1.1",
        "uuid": "^3.3.2"
    }
}
