{
    "name": "asure.hr.services",
    "version": "1.1.5",
    "description": "Collection of HR-related services for Asure Software Evolution HCM suite",
    "main": "index.js",
    "scripts": {
        "test": "node_modules/.bin/jest",
        "lint": "node_modules/.bin/tslint -p tsconfig.json **/*.ts",
        "prettier": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
        "tslint:check": "tslint-config-prettier-check ./tslint.json",
        "test:base": "node_modules/.bin/jest -c jest.integration.test.config.json -i --verbose",
        "test:local": "INTEGRATION_TEST_CONFIG_FILENAME=development.config.json npm run test:base",
        "version": "auto-changelog --template changelog-template.hbs -u -p && git add CHANGELOG.md"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged && npm run lint"
        }
    },
    "lint-staged": {
        "*.{js,ts,tsx,json,md}": [
            "prettier --write",
            "git add"
        ]
    },
    "auto-changelog": {
        "issueUrl": "https://evolutionpayroll.atlassian.net/browse/{id}",
        "issuePattern": "[A-Z]+-\\d+",
        "replaceText": {
            "([A-Z]+-\\d+)": "[`$1`](https://evolutionpayroll.atlassian.net/browse/$1)"
        }
    },
    "repository": {
        "type": "git",
        "url": "git+ssh://git@bitbucket.org/iSystemsTeam/asure.hr.services.git"
    },
    "author": "drexler",
    "license": "ISC",
    "homepage": "https://bitbucket.org/iSystemsTeam/asure.hr.services#readme",
    "devDependencies": {
        "@types/aws-lambda": "^8.10.19",
        "@types/jest": "^24.0.0",
        "@types/mssql": "^4.0.12",
        "@types/node": "^11.9.0",
        "@types/randomstring": "^1.1.6",
        "ajv": "^5.1.6",
        "auto-changelog": "^1.11.0",
        "husky": "^1.1.3",
        "jest": "^24.1.0",
        "lint-staged": "^8.0.4",
        "prettier": "1.15.0",
        "randomstring": "^1.1.5",
        "superagent": "~3.5.2",
        "supertest": "~3.0.0",
        "ts-jest": "^23.10.5",
        "tslint-config-prettier": "^1.17.0",
        "typescript": "^3.0.1"
    },
    "jest": {
        "transform": {
            ".(ts)": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ]
    },
    "dependencies": {
        "aws-sdk": "^2.307.0",
        "jsonwebtoken": "^8.4.0",
        "mssql": "^4.3.1",
        "njwt": "^0.4.0",
        "uuid": "^3.3.2"
    }
}
